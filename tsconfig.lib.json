{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src/generator/**/*.ts", "src/runtime/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
